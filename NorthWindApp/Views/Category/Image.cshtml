@model NorthWindApp.Models.ViewModels.CategoryViewModel
@{
    ViewData["Title"] = "Edit category image";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="container-fluid" id="imgContainer">
        <div class="row mb-3">
            <h1>Edit category image</h1>
        </div>
        <div class="row mb-3">
        </div>
        <div class="row mb-3">
            <div class="col-md-3 themed-grid-col">
                @*<img id="image" src='@Url.Action("GetImage","Category", new {id = Model.Id})' alt="" />*@
                @Html.NorthwindImage(Model.Id, Model.Name)
            </div>
            <div class="col-md-3 themed-grid-col">

                <form asp-action="UploadImage" asp-controller="Category" method="post" enctype="multipart/form-data">
                    <input type="file" name="ImageUpload" /><br>
                    <input name="Id" value="@Model.Id" hidden="hidden" /><br>
                    <input name="Name" value="@Model.Name" /><br>
                    <input name="Description" value="@Model.Description" hidden="hidden"/><br>
                    <input type="submit" value="Загрузить" />
                </form>

            </div>
        </div>
    </div>

