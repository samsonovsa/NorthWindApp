{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(LocalDB)\\MSSQLLocalDB;Database=northwind;Integrated Security=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Products": {
    "MaxCountOnPage": 8
  },
  "CacheImage": {
    "Path": "Cache\\Image",
    "MaxCountCachigImage": 10,
    "CacheExpirationTimeInSec": 600
  },
  "Filters": {
    "ActionLogging": true
  }
}
